{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/app": [
        "libs/app/src"
      ],
      "@app/config": [
        "libs/config/src"
      ],
      "@app/mongo": [
        "libs/mongo/src"
      ],
      "@app/user": [
        "libs/user/src"
      ],
      "@app/activity": [
        "libs/activity/src"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
