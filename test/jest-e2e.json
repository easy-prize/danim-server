{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/app": "<rootDir>/../libs/app/src",
    "@app/config": "<rootDir>/../libs/config/src",
    "@app/mongo": "<rootDir>/../libs/mongo/src",
    "@app/user": "<rootDir>/../libs/user/src",
    "@app/auth": "<rootDir>/../libs/auth/src",
    "@app/ticket-image": "<rootDir>/../libs/ticket-image/src"
  }
}