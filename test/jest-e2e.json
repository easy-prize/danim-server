{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/app": "<rootDir>/../libs/app/src",
    "@app/config": "<rootDir>/../libs/config/src",
    "@app/mongo": "<rootDir>/../libs/mongo/src",
    "@app/user": "<rootDir>/../libs/user/src",
    "@app/activity": "<rootDir>/../libs/activity/src",
    "@app/review": "<rootDir>/../libs/review/src",
    "@app/course": "<rootDir>/../libs/course/src",
    "@app/ownership": "<rootDir>/../libs/ownership/src"
  }
}
